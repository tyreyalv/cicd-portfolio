apiVersion: networking.k8s.io/v1
kind: Ingress
metadata:
  name: "{{ app_name }}-ingress"
  namespace: "{{ namespace }}"
spec:
  rules:
  - host: "{{ ingress_hostname }}"
    http:
      paths:
      - path: /
        pathType: Prefix
        backend:
          service:
            name: "{{ app_name }}-service"
            port:
              number: 80